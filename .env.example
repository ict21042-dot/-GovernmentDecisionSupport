# Google AI API Configuration
GOOGLE_API_KEY=your_gemini_api_key_here

# System Configuration
DOMAIN="Local Government Planning and Decision Making"
VECTOR_DB_TYPE=chroma
LLM_MODEL=gemini-pro
LLM_TEMPERATURE=0.1
